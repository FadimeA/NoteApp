<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    tools:context=".ui.fragments.note.NoteDetailFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#252525"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        tools:layout_editor_absoluteX="130dp">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 мая 17:21"
            app:layout_constraintTop_toTopOf="@id/toolbarDetail"
            app:layout_constraintStart_toEndOf="@id/toolbarDetail"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="24dp"
            android:text="Готово"
            android:textColor="#D88B02"
            android:textSize="15sp"
            android:visibility="invisible"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/color_change"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:background="@drawable/outline_pending_24"/>

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Title"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:textSize="24sp"
        android:textColorHint="@color/white"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="402dp"
        app:layout_constraintTop_toBottomOf="@id/et_title"
        android:layout_marginBottom="60dp"
        android:background="@android:color/transparent"
        android:hint="Text"
        android:gravity="top"
        android:padding="8dp"
        android:textColorHint="@color/white"
        android:textSize="16sp"/>



</androidx.constraintlayout.widget.ConstraintLayout>